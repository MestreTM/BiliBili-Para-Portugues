{
  "manifest_version": 3,
  "name": "BiliBili Para Português",
  "version": "1.0.0",
  "description": "Traduza o BiliBili para o português.",
  "author": "LazyScar and MestreTM",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.bilibili.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.bilibili.com/*"
      ],
      "js": [
        "dictionary.js",
        "main.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png", 
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "64": "icon64.png",
      "128": "icon128.png"
    }
  }
}
